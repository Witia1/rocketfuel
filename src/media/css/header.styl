// styles for the global site header only.
@import 'lib';

// ***************** Wide Mobile (600+ px)

// usable on any header
.header {
    background: #fff;
    border-bottom: 1px solid #d8d8d8;
    display-flex();
    height: 48px;
    max-height: 48px;
    position: relative;
    width: 100%;
    > * {
        flex-center();
    }
    .flex-shift, .title {
        flex(1);
        padding-left: 10px;
    }
    .title {
        color: $castle-skull-gray;
        font-size: 18px;
        font-weight: 400;
        line-height: 48px;
        z-index: 10;
    }
}

.project {
    border-left: 1px dotted $seavan-salt-white;
    color: darken($flamin-hot-cheetos-orange, 20%);
    font-size: 24px;
    font-weight: 600;
    line-height: 48px;
    margin-left: 15px;
    padding: 5px 0 0 15px;
}

header .email {
    border-right: 1px solid $seavan-salt-white;
    color: $london-fog-gray;
    margin-right: 15px;
    padding-right: 15px;
}

.header, .secondary-header {
    border-bottom: 1px solid darken($cement-gray, 5%);
}

// # for the primary site header *only*. If you need to generalize a style in here, move it.

.site-header {
    display: block;
    height: 90px;
    max-height: 90px;
    position: relative;
    text-align: center;
    top: 0;
    z-index: 20;
    > * {
        display: block;
    }
    > nav {
        height: 90px;
        display-flex();
        margin: 0 auto;
        max-width: 1024px;
        position: relative;
        text-align: left;
        width: 100%;
        > * {
            flex-center();
            display: block;
        }
    }
    .site {
        margin: 0;
        width: 232px;
        a {
            display: block;
            hidetext();
            width: 100%;
        }
    }
    .wordmark {
        background: url(../img/pretty/marketplace_logo.png) -5px 50% no-repeat;
        background-size: 245px auto;
        display: block;
        max-width: 232px;
        width: 232px;
    }
    .site, .site a, .wordmark {
        height: 60px;
    }
    .header-button {
        display: none;
    }
    .persona {
        display: block;
    }
}

.act-tray {
    height: 47px;
    position: relative;
    width: 34px;  // 24px + 10px margin
}

.close {
    background: url(../img/pretty/close.svg) 50% no-repeat;
    background-size: 18px auto;
    height: 34px;
    hidetext();
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;
}

// Buttons that appear in headers.
.header-button {
    color: $castle-skull-gray;
    display: block;
    height: 48px;
    line-height: 48px;
    text-align: center;
    width: 48px;

    &.back {
        hidetext();
        background: url(../img/pretty/back_arrow.svg) center no-repeat;
        background-size: 12px 24px;
        margin-right: 2px;
        position: relative;
        width: 50px;
        &:after {
            background-repeat: no-repeat;
            content: "";
            display: block;
        }
        &:hover {
            background-image: url(../img/pretty/back_arrow_active.svg);
        }
    }
    // 'Sign In'
    &.persona {
        display: none;
        margin-left: 15px;
        word-break: keep-all;
        word-wrap: normal;
        &.loading-submit {
            hidetext();
            outline: 0;
            spinner('loading');
            margin-left: 15px;
            width: 50px;
            &:after {
                display: none;
            }
        }
    }
}

// When we're holding down on the debug page, don't allow clicking on the logo
// because that would take us back home.
[data-page-type~=debug] .header .wordmark {
    pointer-events: none;
}

[data-page-type~=search],
[data-page-type~=leaf] {
    .back, .expand, .flex-span {
        display: block;
    }
    .site, .flex-shift {
        display: none;
    }
    .flex-span {
        flex(1);
    }
}

main {
    padding: 48px 0;
}

.logged-in .site-header .persona {
    display: none;
}

// How does the header look for the various page "types"?
[data-page-type~=search],
[data-page-type~=leaf] {
    .back, .site {
        display: block;
    }
    .back, .site-header .expand-toggle,
    .flex-span {
        display: none;
    }
    .flex-shift {
        display: block;
    }
}

.nav-overlay.show {
    background: transparent;
}
