// styles for the global site header only.
@import 'lib';

// ***************** Wide Mobile (600+ px)

// usable on any header
.header {
    background: #fff;
    display-flex();
    height: 60px;
    max-height: 60px;
    position: relative;
    width: 100%;
    > * {
        flex-center();
    }
    .flex-shift, .title {
        flex(1);
        padding-left: 10px;
    }
    .title {
        color: $castle-skull-gray;
        font-size: 18px;
        font-weight: 400;
        line-height: 60px;
        z-index: 10;
    }
}

.project {
    border-left: 1px dotted $cloud-gray;
    color: darken($flamin-hot-cheetos-orange, 20%);
    font-size: 24px;
    font-weight: 600;
    line-height: 30px;
    margin-left: 15px;
    padding: 0 0 0 15px;
}

header .email {
    border-right: 1px solid $seavan-salt-white;
    color: $london-fog-gray;
    margin-right: 15px;
    padding-right: 15px;
}

.header, .secondary-header {
    border-bottom: 1px solid $cloud-gray;
}

// # for the primary site header *only*. If you need to generalize a style in here, move it.

.site-header {
    display: block;
    height: 60px;
    max-height: 60px;
    position: relative;
    text-align: center;
    top: 0;
    z-index: 20;

    &:before {
        display: none;
    }
    > * {
        display: block;
    }
    > nav,
    > .warn {
        height: 60px;
        display-flex();
        margin: 0 auto;
        max-width: 1024px;
        position: relative;
        text-align: left;
        width: 100%;

        > * {
            flex-center();
            display: block;
        }
    }
    .site {
        height: 60px;
        margin: 0;
        width: 232px;

        a {
            display: block;
            height: 60px;
            hidetext();
            width: 100%;
        }
    }
    .wordmark {
        background: url(../img/pretty/marketplace_logo.png) -5px 50% no-repeat;
        background-size: auto 46px;
        display: block;
        height: 47px;
        max-width: 232px;
        width: 232px;
    }
    .site, .site a, .wordmark {
        height: 60px;
    }
    .header-button {
        display: none;
    }
    .persona {
        display: block;
    }
}

.close {
    background: url(../img/pretty/close.svg) 50% no-repeat;
    background-size: 18px auto;
    height: 34px;
    hidetext();
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;
}

// Buttons that appear in headers.
.header-button {
    color: $castle-skull-gray;
    display: block;
    height: 60px;
    line-height: 60px;
    text-align: center;
    width: 48px;

    // 'Sign In'
    &.persona {
        display: none;
        margin-left: 15px;
        word-break: keep-all;
        word-wrap: normal;
        &.loading-submit {
            hidetext();
            outline: 0;
            width: 50px;
            &:after {
                display: none;
            }
        }
    }
}

// When we're holding down on the debug page, don't allow clicking on the logo
// because that would take us back home.
[data-page-type~=debug] .header .wordmark {
    pointer-events: none;
}

main {
    padding: 48px 0;
}

.logged-in .site-header .persona {
    display: none;
}

.nav-overlay.show {
    background: transparent;
}

.rocketfuel-disabled .site-header {
    height: 120px;
    max-height: 120px;
}

.site-header > warn {
    border: 2px dotted $angry-cvan-red;
    border-radius: 5px;
    height: 48px;
    line-height: 44px;  // 60px minus the border widths;
    padding: 0 20px;
}
